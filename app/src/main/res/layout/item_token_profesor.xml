<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/cuadro_redondo"
    android:padding="12dp"
    android:clickable="true"
    android:onClick="onItemClick">

    <ImageView
        android:id="@+id/iconotoken"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/token__1_" />
    <ImageView
        android:id="@+id/otraImagen"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/angle_right_solid"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@id/iconotoken"
        android:fontFamily="@font/lilita_one"
        android:text="Codigo del Token"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>